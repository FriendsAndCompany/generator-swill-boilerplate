{
    "basePaths": {
             "src": "<%= folder.src %>/",
            "dest": "<%= folder.dest %>/",
         "build": "<%= folder.build %>/",
         "bower": "<%= folder.dest %>/<%= folder.bower %>",

        "fonts": {
                "dest": "<%= folder.fonts %>/"
        },

        "sprite": {
                "src": "<%= folder.sprite %>/"
        },

        "images": {
                 "src": "<%= folder.images.src %>/",
                "dest": "<%= folder.images.dest %>/"
        },

        "styles": {
                 "src": "<%= folder.styles.src %>/",
                "dest": "<%= folder.styles.dest %>/"
        },

        "scripts": {
                 "src": "<%= folder.scripts.src %>/",
                "dest": "<%= folder.scripts.dest %>/"
        }
    },

    "components": true,

    "es6": <%= lintcss %>,

    "lintCSS": <%= lintcss %>,

    "lintJS": <%= lintjs %>,

    "jQuery": <%= jquery %>,

    "autoprefixerBrowsers": [
            "ie >= 8",
            "ie_mob >= 10",
            "Firefox > 24",
            "last 10 Chrome versions",
            "safari >= 6",
            "opera >= 24",
            "ios >= 6",
            "android >= 4",
            "bb >= 10"
    ],

    "browserSync": {
            "notify": false,
            "logPrefix": "BrowserSync",
            "server": {
                    "baseDir": ["<%= folder.dest %>/"]
            }
    },

    "browserSyncBuild": {
            "notify": false,
            "logPrefix": "BrowserSync",
            "server": {
                    "baseDir": ["<%= folder.build %>/"]
            }
    }
}
