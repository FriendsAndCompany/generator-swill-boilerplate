{
  "basePaths": {
    "src": "<%= folder.src %>/",
    "dest": "<%= folder.dest %>/",
    "build": "<%= folder.build %>/",
    "bower": "<%= folder.dest %>/<%= folder.bower %>",

    "handlebars": {
       "src": "<%= folder.handlebars %>/",
       "partials": {
          "src": "includes/"
        }
    },

    "images": {
      "src": "<%= folder.images.src %>/",
      "dest": "<%= folder.images.dest %>/"
    },

    "fonts": {
      "dest": "<%= folder.fonts %>/"
    },

    "sprite": {
      "src": "<%= folder.sprite %>/"
    },

    "scripts": {
      "src": "<%= folder.scripts.src %>/",
      "dest": "<%= folder.scripts.dest %>/"
    },

    "styles": {
      "src": "<%= folder.styles.src %>/",
      "dest": "<%= folder.styles.dest %>/"
    }
  },

  "components": true,

  "es6": <%= use.es6 %>,

  "jQuery": <%= use.jquery %>,

  "lintCSS": <%= use.lint.css %>,

  "lintJS": <%= use.lint.js %>,

  "inlineSVG": false,

  "handlebars": <%= use.handlebars %>,

  "autoprefixerBrowsers": [
    "ie > 7",
    "ie_mob > 9",
    "Firefox > 24",
    "last 10 Chrome versions",
    "safari > 5",
    "opera > 24",
    "ios > 5",
    "android > 4",
    "bb > 10"
  ],

  "browserSync": {
    "notify": false,
    "logPrefix": "BrowserSync",
    "server": {
      "baseDir": ["<%= folder.dest %>/"]
    }
  },

  "browserSyncBuild": {
    "notify": false,
    "logPrefix": "BrowserSync",
    "server": {
      "baseDir": ["<%= folder.build %>/"]
    }
  }
}
