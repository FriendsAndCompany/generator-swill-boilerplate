button,
input[type="button"],
.fileUpload span
	background #269566
	background-image linear-gradient(to top, #092606, rgba(0, 0, 0, .5) 130%)
	border 1px solid #000
	border-radius 5px
	box-shadow: inset 0 2px 3px 0 rgba(255,255,255,.3), inset 0 -3px 6px 0 rgba(0,0,0,.2), 0 3px 2px 0 rgba(0,0,0,.2);
	color #FFF
	padding em(5px) em(15px)
	display inline-block

	&:hover
		background pink
		color green

.fileUpload:hover span
	background pink
	color green
