// Web Fonts
@import "typography/_web-fonts"

/*! ==================================================================
   Reset and normalize
   ================================================================== */
/* If you will use bootstrap you can remove this @import */
@import "../../bower_components/normalize.css/normalize.css"

/*! ==================================================================
   Grid System
   ================================================================== */
/* If you will use bootstrap you can remove this @import */
@import "../../bower_components/semantic.gs/stylesheets/styl/grid.styl"

/*! ==================================================================
   Dependencies
   ================================================================== */
@import "../../bower_components/font-awesome/css/font-awesome.css"
@import "../../bower_components/outdated-browser/outdatedbrowser/outdatedbrowser.css"
@import "../../bower_components/bootstrap/dist/css/bootstrap.css"
@import "../../bower_components/animate.css/animate.css"
@import "dependencies/jquery-logo-downloadtip.css"

// Helpers
@import "helpers/_variables"
@import "helpers/_mixins"
@import "helpers/_functions"
@import "helpers/_sprite"
@import "helpers/_svg-sprite"
@import "helpers/_placeholders"

/*! ==================================================================
   Components and settings
   ================================================================== */
/* If you will use bootstrap you can remove these components */
@import "typography/_typography"
@import "components/_form"
@import "components/_button"
@import "components/_code"

// Main Styles
@import "_base"


/*! ==================================================================
   Media Queries
   ================================================================== */
// Printers
@media print
	@import "media_queries/_print"

// 480px
@media (max-width: 30em)
	@import "media_queries/_max_480"

// 481px - 768px
@media (min-width: 30.063em) and (max-width: 48em)
	@import "media_queries/_min_481_max_768"

// 769px - 992px
@media (min-width: 48.063em) and (max-width: 62em)
	@import "media_queries/_min_769_max_992"

//Better Font Smoothing in Chrome & Safari
//http://www.intridea.com/blog/2014/5/8/better-font-smoothing-in-chrome-on-mac-os-x
@media only screen and (-webkit-min-device-pixel-ratio: 1.25),\
	only screen and ( min-device-pixel-ratio: 1.25),\
	only screen and ( min-resolution: 200dpi),\
	only screen and ( min-resolution: 1.25dppx)

	body
		-webkit-font-smoothing: subpixel-antialiased
