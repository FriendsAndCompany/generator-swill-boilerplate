/*!
*
* Box model reset
* http://css-tricks.com/inheriting-box-sizing-probably-slightly-better-best-practice/
*
*/

html
	box-sizing border-box

*, *:before, *:after
	box-sizing inherit

body
	if $debug-vertical-rhythm == true
		background-image: linear-gradient(to top, rgba($debug-color-line, 0.2) 1px, rgba(0, 0, 0, 0) 1px)
		background-size: 100% em($line-height-base, $font-size-base)
		background-position: left top

	font normal normal  $font-size-base\/$line-height-base $font-family-base
	background-color $bg-color
	color $color-text
	text-rendering optimizeLegibility
	-webkit-font-smoothing antialiased
	-moz-osx-font-smoothing grayscale
	font-smoothing auto
	font-feature-settings "liga", "kern"

